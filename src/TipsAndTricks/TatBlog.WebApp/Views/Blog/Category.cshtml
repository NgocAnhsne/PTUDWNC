@model IPagedList<Post>

@{
    ViewData["PageTitle"] = "Chủ đề";

    var category = new Category();
    if (Model != null && Model.Count > 0)
        category = (Model[0].Category as Category);
}

<div class="p-4">
    @if (!string.IsNullOrWhiteSpace(category.Name))
    {
        <h3 class="text-primary mb-3">
            Những bài viết thuộc chủ đề '@category.Name'
        </h3>
    }

    @foreach (var postList in Model)
    {
        <partial name="_PostList" model="postList" />
    }
    <partial name="_Pager" model="@Model" />
</div>
<h1>
    Đây là chuyên mục
</h1>

<p>
    Bây giờ là : @ViewBag.CurrentTime
</p>